# Note to self :
# If interactive command with directory name, must be function ($(pwd), etc)
# Else the alias charge it at load time and it become unusable if you move in another directory

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi


# list aliases
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'



alias update-ca-certificates="sudo /usr/sbin/update-ca-certificates"

#Python aliases
alias py="python3"
alias python="python3"
alias pip="python3 -m pip"
alias pip-update="python3 -m pip install --upgrade pip"

#git aliases
alias gst="git status "
alias ga="git add "
alias gaa="git add -A "
alias gbr="git branch "
alias gci="git commit "
alias gd="git diff "
alias gco="git checkout "
alias gk="gitk --all&"
alias gx="gitx --all"

alias got="git "
alias gti="git "

alias _gg="git grep -i "
alias ggA="_gg -A "
alias ggB="_gg -B "
alias ggC="_gg -C "

alias config="git --git-dir=$HOME/config_file --work-tree=$HOME "
alias vim=$HOME/.config/nvim-linux64/bin/nvim
# alias vim=nvim
